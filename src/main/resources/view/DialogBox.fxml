<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<fx:root fx:id="hbox" alignment="BASELINE_RIGHT" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" alignment="TOP_LEFT" snapToPixel="false" text="Label" wrapText="true">
         <cursor>
            <Cursor fx:constant="H_RESIZE" />
         </cursor>
         <padding>
            <Insets left="4.0" right="4.0" />
         </padding>
      </Label>
      <Circle fx:id="circleImage" fill="DODGERBLUE" radius="42.0" stroke="BLACK" strokeType="INSIDE" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
